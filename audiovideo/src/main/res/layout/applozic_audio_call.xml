<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black"
    android:fitsSystemWindows="true">


    <include layout="@layout/content_conversation" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/video_call_top_color"
        android:gravity="start">

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_toLeftOf="@+id/video_call_option_rl"
            android:layout_toStartOf="@+id/video_call_option_rl"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/fab_margin"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="25sp" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/applozic_audio_profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/applozic_ic_contact_picture_180_holo_light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom|end"
        android:background="@color/video_call_top_color"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/speaker_action_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_volume_down_white_24px"
            app:fabSize="mini" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/call_action_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_call_end_white_24px" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mute_action_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_mic_green_24px"
            app:fabSize="mini" />

    </RelativeLayout>

    <TextView
        android:id="@+id/applozic_audio_timer"
        android:layout_width="wrap_content"
        android:textDirection="locale"
        android:textAlignment="gravity"
        android:layout_height="wrap_content"
        android:layout_below="@+id/applozic_audio_profile_image"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="@dimen/fab_margin"
        android:textColor="@color/whitesmoke"
        android:textSize="20sp" />

</RelativeLayout>
